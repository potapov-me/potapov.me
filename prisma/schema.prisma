// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TimelineItem {
  id          String   @id @default(uuid())
  year        Int
  title       String
  description String
  lessons     String?
  isBlink     Boolean  @default(false)
  isStartup   Boolean  @default(false)
  link        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String
  url         String?
  icon        String
  stack       String
  repo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  coverImage  String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ShortUrl {
  id          String     @id @default(cuid())
  slug        String     @unique
  originalUrl String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  visits      UrlVisit[]
}

model UrlVisit {
  id          String   @id @default(cuid())
  shortUrl    ShortUrl @relation(fields: [shortUrlId], references: [id])
  shortUrlId  String
  timestamp   DateTime @default(now())
  ipAddress   String?
  userAgent   String?
  referer     String?
}